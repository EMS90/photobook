{
  "name": "Laravel + React",
  "image": "mcr.microsoft.com/devcontainers/php:8.2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/composer:1": {}
  },
  "postCreateCommand": "composer install && npm install && php artisan migrate && php artisan serve",
  "forwardPorts": [8000],
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    }
  }
}
