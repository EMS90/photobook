{
  "name": "Laravel Dev",
  "image": "mcr.microsoft.com/devcontainers/php:8.2",
  "features": {
    "ghcr.io/devcontainers/features/composer:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "postCreateCommand": "composer install && npm install",
  "forwardPorts": [8000],
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    }
  }
}
